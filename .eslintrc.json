{
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "max-len": [
            "error",
            {"code": 120, "ignoreStrings": true}
        ],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto",
                "printWidth": 120
            },
            {
                "usePrettierrc": true
            }

        ]
    }

}
